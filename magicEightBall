<body>
  <div class="container">
    <div id="eightBall" class="eight-ball"></div>
    <button id="shakeButton">Shake</button>
    <p id="response"></p>
  </div>

  <script>
  const userName = 'Evan';

document.getElementById('shakeButton').addEventListener('click', () => {
  const userQuestion = 'Is this a cool program?';
  const randomNumber = Math.floor(Math.random() * 8);
  
  let response;
  switch (randomNumber) {
    case 0:
      response = 'It is certain';
      break;
    case 1:
      response = 'It is decidedly so';
      break;
    case 2:
      response = 'Reply hazy try again';
      break;
    case 3:
      response = 'Cannot predict now';
      break;
    case 4:
      response = 'Do not count on it';
      break;
    case 5:
      response = 'My sources say no';
      break;
    case 6:
      response = 'Outlook not so good';
      break;
    case 7:
      response = 'Signs point to yes';
      break;
    default:
      response = 'Invalid shake, please try again!';
      break;
  }
  
  document.getElementById('eightBall').classList.add('response-animation');
  setTimeout(() => {
    document.getElementById('eightBall').classList.remove('response-animation');
    document.getElementById('response').textContent = response;
  }, 1000);
});
  </script>
</body>
